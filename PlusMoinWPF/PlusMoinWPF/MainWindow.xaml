        <Button x:Name="buttonUserInput" Content="Valider mon choix" HorizontalAlignment="Left" Margin="158,51,0,0" VerticalAlignment="Top" Width="136" Height="28" RenderTransformOrigin="1.613,0.643" Click="buttonUserInput_Click"></Button>
        <Label x:Name="resultLabel" Content="perdu" HorizontalAlignment="Left" Margin="316,51,0,0" VerticalAlignment="Top" Height="81" Width="466" FontSize="14"/>
        <Label x:Name="lifeLabel" Content="Vie restante : " HorizontalAlignment="Left" Margin="15,104,0,0" VerticalAlignment="Top" Height="28" Width="80"/>
        <Label x:Name="resultLifeLabel" Content="vie&#xD;&#xA;" HorizontalAlignment="Left" Margin="95,104,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.184,-1.048" Height="28" Width="38"/>


    </Grid>
</Window>
